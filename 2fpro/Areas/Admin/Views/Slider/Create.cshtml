@model _2fpro.Models.Portfolio

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Create","Slider", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
<fieldset>
    <legend>Создание </legend>

    <div class="form-group">
        <label> Заголовок</label>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    <div class="form-group">
        <label> Описание</label>
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    <div class="form-group">
        <label>   Ссылка на видео (из файлого менеджера)</label>
        @Html.TextBoxFor(model => model.VideoLink, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VideoLink)
    </div>
    <div class="form-group">
        <label> Ссылка на страницу (url)</label>
        @Html.TextBoxFor(model => model.ProdLink, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProdLink)
    </div>
   
    <br />


    <div class="editor-field">
        Загрузить фото
        <p></p>
        <div class="file_field">
            @Html.Kendo().Upload().Name("file")
        </div>


    </div>

    <br />
    <p>
        <button class="k-button k-primary" type="submit">Создать</button>&nbsp;
    </p>
</fieldset>
}
 
       
<div>
    <a class="k-button" type="button" href="@Url.Action("Index", "Slider")">Отмена</a>

</div>
